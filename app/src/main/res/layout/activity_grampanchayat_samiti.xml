<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/baground"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GrampanchayatSamiti">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Grampanchayat Samiti"
        android:textSize="35sp"
        android:textColor="@color/TextColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/emp1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"

                >


                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:padding="05dp">


                    <ImageView
                        android:id="@+id/G_S_photo1"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        app:srcCompat="@drawable/employee"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="4dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/G_S_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Akshay more"
                        android:textColor="@color/TextColor"
                        android:textSize="25sp" />


                    <TextView
                        android:id="@+id/Ward_no1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Clark"
                        android:textColor="@color/TextColor"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/G_S_mobile_number1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="9657717186"
                        android:textColor="@color/TextColor"
                        android:textSize="25sp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/emp2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="200dp">


                    <ImageView
                        android:id="@+id/G_S_photo2"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        app:srcCompat="@drawable/employee"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="4dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/G_S_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Akshay more"
                        android:textColor="@color/TextColor"
                        android:textSize="25sp" />


                    <TextView
                        android:id="@+id/Ward_no2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Clark"
                        android:textColor="@color/TextColor"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/G_S_mobile_number2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="9657717186"
                        android:textColor="@color/TextColor"
                        android:textSize="25sp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>